---
const empresas = [
  { name: "Dentalium Vital", logo: "BASCOSTA-2.png" },
  { name: "Droguer√≠a Dr. DR", logo: "CAPRI-1.png" },
  { name: "Equimedis", logo: "CLINICA-BAHIA-1.png" },
  { name: "Farmacenter", logo: "DENTALIUM-VITAL-2.png" },
  { name: "Full Color", logo: "EQUIMEDIS-2.png" },
  { name: "Hilton Garden Inn", logo: "FULL-COLOR-2.png" },
];

// Duplicamos la lista para crear un efecto de desplazamiento infinito
const empresasDuplicadas = [...empresas, ...empresas];
---

<style>
  .carousel-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
    background-color: #f3f4f6;
    padding: 20px 0;
  }

  .carousel-track {
    display: flex;
    animation: scrollLeft 15s linear infinite;
  }

  .carousel-track img {
    max-height: 80px;
    margin: 0 20px;
    transition: transform 0.3s ease-in-out;
  }

  .carousel-track img:hover {
    transform: scale(1.1);
  }

  @keyframes scrollLeft {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>

<section class="carousel-container">
  <div class="carousel-track">
    {empresasDuplicadas.map((empresa, index) => (
      <img key={index} src={empresa.logo} alt={empresa.name} />
    ))}
  </div>
</section>
