            </svg>
          </a>
          <a href="#" class="text-gray-200 hover:text-primary transition-colors">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Links -->
      {footerLinks.map((section) => (
        <div>
          <h4 class="text-sm font-semibold text-gray-200 uppercase tracking-wider">{section.title}</h4>
          <ul class="mt-4 space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-base text-gray-200 hover:text-primary transition-colors"
                >
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-200 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-base text-gray-200">
          © {currentYear} COTEMAG. todo Los Derechos Reservados.
        </p>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-200 hover:text-primary transition-colors">Privacy Policy</a>
          <a href="#" class="text-gray-200 hover:text-primary transition-colors">Terms of Service</a>
          <a href="#" class="text-gray-200 hover:text-primary transition-colors">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>