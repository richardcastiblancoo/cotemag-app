---
import Menuhamburguesa from "./menuhamburguesa.astro";
---

<header>
  <nav>
    <div class="nav-container">
      <div class="logo">
        <a href="/"
          ><img src="logo-cotemag.png" class="logo-cotemag" alt="" /></a
        >
      </div>

      <Menuhamburguesa />
    </div>
  </nav>
</header>

<style>
  header {
    width: 100%;
    background-color: white;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .logo-cotemag {
    width: 100px;
    height: 100px;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #333;
  }

  @media screen and (max-width: 768px) {
    .nav-container {
      justify-content: space-between;
    }
  }
</style>
