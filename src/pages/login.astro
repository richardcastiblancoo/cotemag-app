import Layout from '../layouts/Layout.astro';
---

<Layout title="Login | Cotemag">
   
    <div class="login-container">
        <img src="/logo-cotemag.png" alt="Logo" />
        <input type="text" placeholder="Usuario" />
        <input type="password" placeholder="ContraseÃ±a" />
        <button>Ingresar</button>
    </div>

</Layout> 

<style>
    
    .login-container {
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.1);
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
      text-align: center;
      width: 300px;
    }
    .login-container img {
      width: 80px;
      margin-bottom: 20px;
    }
    .login-container input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: none;
      border-radius: 5px;
    }
    .login-container button {
      width: 100%;
      padding: 10px;
      background: #ff7b00;
      border: none;
      border-radius: 5px;
      color: white;
      font-size: 16px;
      cursor: pointer;
    }
    .login-container button:hover {
      background: #e66a00;
    }
  </style>